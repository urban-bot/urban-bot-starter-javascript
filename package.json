{
    "name": "@urban-bot/starter-javascript",
    "version": "1.0.1",
    "description": "Start write chatbots with urban-bot and javascript",
    "repository": {
        "type": "git",
        "url": "https://github.com/urban-bot/urban-bot-starter-javascript.git"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "webpack",
        "dev": "nodemon",
        "lint": "eslint \"./src\" --ext \".js,.jsx\"",
        "lint:fix": "npm run lint -- --fix",
        "start": "node dist/index.js",
        "start-tunnel": "ngrok http 8080",
        "test": "jest"
    },
    "dependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "@urban-bot/core": "^1.0.1",
        "@urban-bot/discord": "^1.0.1",
        "@urban-bot/facebook": "^1.0.1",
        "@urban-bot/slack": "^1.0.1",
        "@urban-bot/telegram": "^1.0.1",
        "babel-loader": "^9.1.2",
        "dotenv": "^16.0.3",
        "file-loader": "^6.2.0",
        "react": "^18.2.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-node-externals": "^3.0.0"
    },
    "devDependencies": {
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.4.3",
        "ngrok": "^4.3.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "14"
                    }
                }
            ],
            ["@babel/preset-react", {"runtime": "automatic"}]
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "arrowParens": "always",
        "endOfLine": "lf"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "js,jsx,json",
        "exec": "webpack --mode=development && node ./dist/index.js"
    },
    "jest": {
        "testEnvironment": "node",
        "rootDir": "src"
    }
}
